Fonction addth(n en Entier) en Entier
  TantQue n > 10
    n <- n / 10 + n % 10
  FinTantQue
  Retourne n
FinFonction

Fonction addth_recursive(n en Entier) en Entier
  Si n < 10 Alors
    Retourne n
  Sinon
    Retourne addth_recursive(n / 10 + n % 10)
  FinSi
FinFonction

Procédure gen_mot(&mot en Caractère*5)
  Variable i en Entier
  Variable lettres en Chaîne
  mot <- ""
  lettres <- ""
  Pour i <- 1 à Longueur(mot)
    lettres <- lettres & Car(Entier(Aléa()*25+65))
  i Suivant
  mot <- lettres
FinProcédure

Procédure remplir_tableau(&t[7,7] en Entier)
  Variables i, j en Entier
  Pour i <- 0 à 7
    Pour j <- 0 à 7
      t[i,j] <- Entier(Aléa() * 9 + 1)
    j Suivant
  i Suivant
FinProcédure

Procédure remplir_tableau_simple(&t[] en Entier)
  Variable i en Entier
  Pour i <- 0 à Taille(t) - 1
    t[i] <- Entier(Aléa() * 9 + 1)
  i Suivant
FinProcédure

